{% extends '@Client/base_client.html.twig' %}
{% block main %}

    <div class="job-post-area">
        <div class="container">
            <a href="{{ path('projet_new') }}" class="btn btn-default btn-lg"><i class="fa fa-plus"></i> projet</a>
            {% if ((projets|length) and (projets is defined )) %}
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title text-center ">
                            <h2 class="uppercase">Vos Projet(s)</h2>
                            <p>{{ client.FirstName }} {{ client.LastName }}</p>
                            <div class="separator mt-35 mb-77">
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {% for projet in projets %}
                            <div class="single-job-post col-md-12">
                                <div class="job-title col-4 pl-30">
                                            <span class="pull-left block mtb-17" style="position: relative;
            top: 15px;">
                                               <i class="far fa-building fa-3x"></i>
                                            </span>
                                    <div class="fix pl-30 mt-29">
                                        <h4 class="text text-black">{{ projet.nomProjet }}</h4></br><h6>
                                            ${{ projet.cout }}</h6>
                                        {% if (projet.technologies|length) %}
                                            <p>
                                                {% for technologie in projet.technologies %}
                                                | {{ technologie.nomTechnologie }}
                                                {% endfor %}|
                                            </p>
                                        {% else %}
                                            <p>Pas de technologie pour le moment</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="address col-3 pl-50">
                                    <span class="mtb-30 block">{{ projet.description }}</span>
                                </div>
                                <div class="time-payment col-3 pl-60 text-center pt-22">
                                <span class="col-md-12" style="position: relative;top: -5px;left: -40px">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                    {{ projet.dateCreation|date('d/m/Y') }}</span>
                                    <a class="btn btn-default"
                                       href="{{ path('liste_demandes', { 'id': projet.id }) }}">
                                        <i class="far fa-list-alt"></i></a>
                                    <a href="{{ path('projet_show', { 'id': projet.id }) }}" class="btn btn-success"><i
                                                class="fas fa-info"></i></a>
                                    <a href="{{ path('projet_edit', { 'id': projet.id }) }}" class="btn btn-warning"><i
                                                class="far fa-edit"></i></a>
                                    {% if projet.publie==false %}
                                        <a href="{{ path('projet_post', { 'id': projet.id }) }}"
                                           class="btn btn-primary"><i class="fas fa-angle-double-up"></i>
                                            Publier</a>
                                    {% endif %}
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                </div>

            {% else %}
                <h1>Vous n'avez pas creer un projet</h1>
            {% endif %}

        </div>
    </div>
    <!-- End of Job Post Area -->
{% endblock %}
