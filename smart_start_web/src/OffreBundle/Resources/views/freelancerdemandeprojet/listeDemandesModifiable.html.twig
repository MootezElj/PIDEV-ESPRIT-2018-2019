{% extends '@Freelancer/base_freelancer.html.twig' %}
{% block main %}
<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1" id="logout">
            <div class="page-header">
                <h3 class="reviews">Demandes de {{ freelancer.firstName }}</h3>
            </div>

            <div class="comment-tabs">
                <div class="tab-content">
                    <div class="tab-pane active" id="comments-logout">
                        <ul class="media-list">
                            {% for demande in demandes %}
                                <li class="media" style="margin-left: 10px">
                                    <div class="pull-left col-md-3">
                                        <h3>"{{ demande.projet.nomProjet }}"</h3>
                                        <h3>{{ demande.projet.client.firstName }}</h3>
                                        <div style="position: relative; margin-top: 10px">Post√© le {{ demande.projet.datePublication|date('d/m/y') }}</div>
                                        <p class="text text-warning">Periode: {{ demande.projet.dateDebut |date('d/m/y')}}
                                            <i class="fa fa-angle-double-right"></i> {{ demande.projet.dateFin |date('d/m/y')}} </p>
                                        <a style="font-size: 30px;">Pour <i class="fa fa-dollar"></i>{{ demande.projet.cout }}</a>
                                        </div>
                                    <div class="media-body">
                                        <div class="well well-lg">
                                            <h4 class="media-heading text-uppercase reviews">{{ demande.titreDemande }}</h4>
                                            <ul class="media-date text-uppercase reviews list-inline">
                                                <li class="mm">{{ demande.dateDemande|date('d/m/y') }}</li>
                                            </ul>
                                            <p class="media-comment">
                                                {{ demande.descriptionDemande }}
                                            </p>
                                            <a class="text text-info" style="font-size: 30px;"><span class="glyphicon glyphicon-share-alt" ></span> <i class="fa fa-dollar"></i>{{ demande.cout }}  </a>
                                            dans (
                                            <a class="text text-success text-uppercase" data-toggle="collapse" style="font-size: 20px" >{{ demande.periodeRealisationMin }} </a>
                                            <a class="text text-warning btn-circle text-uppercase" style="font-size: 20px;margin-right: 20px"><i class="fa fa-angle-double-right"></i>{{ demande.periodeRealisationMax }}) jours </a>
                                            <a href="{{ path('freelancerdemandeprojet_show', { 'id': demande.id }) }}" class="btn btn-info"> <span class="fa fa-info"></span>
                                                Info sur demande</a>
                                            <a href="{{ path('freelancerdemandeprojet_edit', { 'id': demande.id }) }}" class="btn btn-warning"><i class="fa fa-pencil"></i> demande</a>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}